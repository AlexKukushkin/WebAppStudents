    <servlet>
        <servlet-name>
            DeleteStudentServlet
        </servlet-name>
        <servlet-class>
            servlets.DeleteStudentServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteStudentServlet</servlet-name>
        <url-pattern>/deleteById</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>
            StudentEditServlet
        </servlet-name>
        <servlet-class>
            servlets.StudentEditServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentEditServlet</servlet-name>
        <url-pattern>/editById</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>
            StudentCreateServlet
        </servlet-name>
        <servlet-class>
            servlets.StudentCreateServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentCreateServlet</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>
            StudentSaveServlet
        </servlet-name>
        <servlet-class>
            servlets.StudentSaveServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentSaveServlet</servlet-name>
        <url-pattern>/save</url-pattern>
    </servlet-mapping>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>